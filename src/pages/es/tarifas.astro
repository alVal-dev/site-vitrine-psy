---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { type Locale, t, getServicePath } from '../../i18n';

const lang: Locale = 'es';

const services = [
  {
    key: 'individual',
    color: 'rose',
    href: getServicePath('therapie-individuelle', lang),
  },
  {
    key: 'couple',
    color: 'purple',
    href: getServicePath('therapie-couple', lang),
  },
  {
    key: 'orientation',
    color: 'blue',
    href: getServicePath('orientation', lang),
  },
  {
    key: 'spanish',
    color: 'amber',
    href: getServicePath('espagnol', lang),
  },
];

const colorClasses: Record<string, { border: string; text: string }> = {
  rose: {
    border: 'border-rose-200',
    text: 'text-rose-600',
  },
  purple: {
    border: 'border-purple-200',
    text: 'text-purple-600',
  },
  blue: {
    border: 'border-blue-200',
    text: 'text-blue-600',
  },
  amber: {
    border: 'border-amber-200',
    text: 'text-amber-600',
  },
};

const learnMoreLabel = 'Saber mÃ¡s';
---

<BaseLayout 
  lang={lang} 
  title={`${t('pricing.title', lang)} | Evelin Valcarce`}
  description="Tarifas de las consultas de psicÃ³loga en Libourne. Terapia individual, pareja, orientaciÃ³n. Tarifas transparentes y modalidades de pago."
>
  <section class="pt-28 pb-16">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <header class="text-center mb-16">
        <h1 class="font-serif text-4xl md:text-5xl text-gray-800 mb-4">
          {t('pricing.title', lang)}
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {t('pricing.subtitle', lang)}
        </p>
      </header>

      <!-- Grille des tarifs -->
      <div class="grid gap-8 md:grid-cols-2 mb-16">
        {services.map((service) => {
          const colors = colorClasses[service.color];
          const name = t(`pricing.services.${service.key}.name`, lang);
          const description = t(`pricing.services.${service.key}.description`, lang);
          const duration = t(`pricing.services.${service.key}.duration`, lang);
          const price = t(`pricing.services.${service.key}.price`, lang);
          const note = t(`pricing.services.${service.key}.note`, lang);
          
          return (
            <article class={`relative flex flex-col rounded-2xl border-2 ${colors.border} bg-white p-6 shadow-sm hover:shadow-lg transition-shadow`}>
              <div class="flex flex-col flex-1">
                <!-- Titre et description -->
                <h2 class="font-serif text-2xl text-gray-800 mb-2">{name}</h2>
                <p class="text-gray-600 mb-6">{description}</p>

                <!-- Tarif unique -->
                <div class="flex items-center justify-between p-4 rounded-lg bg-gray-50">
                  <div>
                    <p class="font-medium text-gray-800">{t('pricing.sessionNote', lang)}</p>
                    <p class="text-sm text-gray-500">{duration} {t('pricing.minutes', lang)}</p>
                  </div>
                  <div class="text-right">
                    <p class={`text-2xl font-bold ${colors.text}`}>{price}â‚¬</p>
                  </div>
                </div>

                <!-- Note -->
                {note && (
                  <p class="mt-4 text-sm text-gray-500 italic">
                    ðŸ’¡ {note}
                  </p>
                )}

                <!-- Spacer + Lien -->
                <div class="flex-1"></div>
                <a 
                  href={service.href} 
                  class={`mt-6 inline-flex items-center text-sm font-medium ${colors.text} hover:underline`}
                >
                  {learnMoreLabel}
                  <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          );
        })}
      </div>

      <!-- Informations pratiques -->
      <div class="grid gap-8 md:grid-cols-3 mb-16">
        
        <!-- Paiement -->
        <div class="rounded-xl bg-gray-50 p-6">
          <div class="flex items-center gap-3 mb-4">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-green-100 text-green-600">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="font-serif text-lg text-gray-800">{t('pricing.payment.title', lang)}</h3>
          </div>
          <ul class="space-y-2 text-gray-600">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              {t('pricing.payment.methods', lang)}
            </li>
            <li class="flex items-center gap-2 text-sm text-gray-500">
              <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
              {t('pricing.payment.noCard', lang)}
            </li>
          </ul>
          <p class="mt-4 text-sm text-gray-500">
            {t('pricing.payment.receipt', lang)}
          </p>
        </div>

        <!-- Remboursement -->
        <div class="rounded-xl bg-blue-50 p-6">
          <div class="flex items-center gap-3 mb-4">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-600">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="font-serif text-lg text-gray-800">{t('pricing.reimbursement.title', lang)}</h3>
          </div>
          <p class="text-gray-600 text-sm mb-3">
            {t('pricing.reimbursement.text', lang)}
          </p>
          <p class="text-sm font-medium text-blue-700">
            ðŸ’¡ {t('pricing.reimbursement.mutuelle', lang)}
          </p>
        </div>

        <!-- Annulation -->
        <div class="rounded-xl bg-amber-50 p-6">
          <div class="flex items-center gap-3 mb-4">
            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-amber-100 text-amber-600">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-serif text-lg text-gray-800">{t('pricing.cancellation.title', lang)}</h3>
          </div>
          <p class="text-gray-600">
            {t('pricing.cancellation.text', lang)}
          </p>
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center rounded-2xl bg-linear-to-r from-rose-50 to-pink-50 p-12">
        <h2 class="font-serif text-2xl md:text-3xl text-gray-800 mb-4">
          {t('pricing.cta.title', lang)}
        </h2>
        <p class="text-gray-600 mb-8 max-w-xl mx-auto">
          {t('pricing.cta.text', lang)}
        </p>
        <button
          type="button"
          data-open-modal="appointment"
          class="inline-flex items-center gap-2 rounded-full bg-rose-500 px-8 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-rose-600 hover:shadow-xl hover:-translate-y-0.5 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-rose-400 focus-visible:ring-offset-2"
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          {t('pricing.cta.button', lang)}
        </button>
      </div>

    </div>
  </section>
</BaseLayout>