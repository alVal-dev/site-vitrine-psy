---
import { Image } from "astro:assets";
import logo from "../../assets/logo.png";

type Props = {
  variant?: "nav" | "hero";
  alt?: string;
  class?: string;
  priority?: boolean;
};

const {
  variant = "nav",
  alt = "Logo",
  class: className = "",
  priority = false,
} = Astro.props;

const isNav = variant === "nav";
const width = isNav ? 40 : 250;
const height = width;
const sizes = isNav ? "40px" : "(min-width: 768px) 250px, 160px";
---

<Image
  src={logo}
  alt={alt}
  width={width}
  height={height}
  sizes={sizes}
  densities={[1, 2]}
  format="webp"
  quality={90}
  loading={priority ? "eager" : "lazy"}
  decoding="async"
  fetchpriority={priority ? "high" : "auto"}
  class={className}
/>