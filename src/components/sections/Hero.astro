---
import BrandLogo from "../ui/BrandLogo.astro";
import { type Locale, t, getLocalizedPath } from "../../i18n";

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;

const servicesHref = getLocalizedPath("/#services", lang);
---

<section id="accueil" aria-labelledby="hero-title" class="relative flex min-h-[90svh] items-center overflow-hidden bg-rose-50/30 pt-20">
  <div aria-hidden="true" class="pointer-events-none absolute inset-0">
    <div class="absolute -left-20 -top-20 h-96 w-96 rounded-full bg-rose-200/60 mix-blend-multiply opacity-80 blur-[80px] md:h-150 md:w-150 md:blur-[120px]"></div>
    <div class="absolute -right-20 top-0 h-80 w-80 rounded-full bg-pink-100/60 mix-blend-multiply opacity-80 blur-[80px] md:h-125 md:w-125 md:blur-[120px]"></div>
    <div class="absolute -bottom-32 left-1/3 h-80 w-80 rounded-full bg-red-100/60 mix-blend-multiply opacity-80 blur-[80px] md:h-150 md:w-150 md:blur-[120px]"></div>
  </div>

  <div class="relative mx-auto w-full max-w-7xl px-4 py-20 sm:px-6 lg:px-8">
    <div class="flex flex-col gap-12 lg:flex-row lg:items-center lg:justify-between">
      <div class="max-w-3xl">
        <h1 id="hero-title" class="mb-6 font-serif text-5xl leading-[1.1] text-gray-800 md:text-6xl lg:text-7xl">
          {t('hero.title', lang)}
          <span class="block text-rose-950/80">{t('hero.titleHighlight', lang)}</span>
        </h1>
        <p class="mb-10 max-w-2xl text-xl leading-relaxed text-gray-600 md:text-2xl">
          {t('hero.subtitle', lang)}
        </p>
        <div class="flex flex-col gap-4 sm:flex-row">
          <a href={servicesHref}
            class="inline-flex items-center justify-center rounded-full bg-rose-400
                   px-8 py-4 font-medium text-white shadow-lg transition hover:-translate-y-1 hover:bg-rose-500
                   hover:shadow-rose-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-rose-400
                   focus-visible:ring-offset-2"
          >
            {t('hero.cta', lang)}
          </a>
        </div>
      </div>

      <div class="hidden shrink-0 lg:block">
        <div class="flex h-100 w-100 md:h-60 md:w-60">
          <BrandLogo
            variant="hero"
            alt={t('hero.logoAlt', lang)}
            priority={true}
            class="object-contain"
          />
        </div>
      </div>
    </div>
  </div>
</section>