---
import { type Locale, t, getServicePath } from "../../i18n";

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;

const cardClass = "h-full rounded-2xl bg-white p-8 shadow-lg transition will-change-transform " +
                  "hover:-translate-y-1 hover:shadow-xl motion-reduce:transform-none motion-reduce:transition-none " +
                  "flex flex-col";
const iconWrapClass = "mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-rose-100";
const linkClass = "mt-auto inline-flex items-center font-medium text-rose-400 transition-colors hover:text-rose-500 " +
                  "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-rose-400 focus-visible:ring-offset-2 focus-visible:ring-offset-white";
const iconClass = "h-8 w-8 text-rose-400";

// Les slugs de base sont TOUJOURS en français - c'est la clé du serviceSlugMap
const services = [
  {
    key: 'individual',
    baseSlug: 'therapie-individuelle', // Slug FR = clé du mapping
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" focusable="false" class="${iconClass}"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>`,
  },
  {
    key: 'couple',
    baseSlug: 'therapie-couple',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" focusable="false" class="${iconClass}"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>`,
  },
  {
    key: 'orientation',
    baseSlug: 'orientation',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" focusable="false" class="${iconClass}"><path d="m16.24 7.76-1.804 5.411a2 2 0 0 1-1.265 1.265L7.76 16.24l1.804-5.411a2 2 0 0 1 1.265-1.265z"/><circle cx="12" cy="12" r="10"/></svg>`,
  },
  {
    key: 'spanish',
    baseSlug: 'espagnol',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" focusable="false" class="${iconClass}"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>`,
  },
];
---

<section id="services" aria-labelledby="services-title" class="bg-gray-50 py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <header class="mb-16 text-center">
      <h2 id="services-title" class="mb-4 font-serif text-4xl text-gray-800 md:text-5xl">
        {t('services.title', lang)}
      </h2>
      <p class="mx-auto max-w-3xl text-xl text-gray-600">
        {t('services.subtitle', lang)}
      </p>
    </header>

    <ul class="grid gap-8 md:grid-cols-2 lg:grid-cols-4" role="list">
      {services.map((service) => {
        const title = t(`services.list.${service.key}.title`, lang);
        const description = t(`services.list.${service.key}.description`, lang);
        const href = getServicePath(service.baseSlug, lang);

        return (
          <li>
            <article class={cardClass}>
              <div class={iconWrapClass} aria-hidden="true" set:html={service.icon} />
              <h3 class="mb-4 font-serif text-xl text-gray-800">
                {title}
              </h3>
              <p class="mb-6 leading-relaxed text-gray-600">
                {description}
              </p>
              <a href={href} class={linkClass}>
                {t('services.learnMore', lang)} <span aria-hidden="true">→</span>
              </a>
            </article>
          </li>
        );
      })}
    </ul>
  </div>
</section>